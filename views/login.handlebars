<div>
  <section>
    <h2 class="text-black">Login</h2>

    <form class="login-form">
      <div>
        <label for="email-login" class="text-black">Email</label>
        <input type="text" id="email-login" />
      </div>
      <div>
        <label for="password-login" class="text-black">Password</label>
        <input type="password" id="password-login" />
      </div>
      <div>
        <button type="submit">Login</button>
      </div>
    </form>
  </section>

  <section>
    <h2 class="text-black">Signup</h2>

    <form class="signup-form">
      <div>
        <label for="name-signup" class="text-black">Name</label>
        <input type="text" id="name-signup" />
      </div>
      <div>
        <label for="email-signup" class="text-black">Email</label>
        <input type="text" id="email-signup" />
      </div>
      <div>
        <label for="password-signup" class="text-black">Password (must be between 8 and 100 characters long)</label>
        <input type="password" id="password-signup" />
      </div>
      <div>
        <button type="submit">Sign up</button>
      </div>
    </form>
  </section>
</div>

<script src="./js/login.js"></script>