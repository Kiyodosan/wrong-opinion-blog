<article>
  <div>
    <h2 class="title">{{blogPost.title}}</h2>
  </div>

  <div>
    <p class="content">{{blogPost.content}}</p>
  </div>

  <div>
    <p class="username">Created by: {{blogPost.user.name}}</p>
    <p id="timestamp">Created on: {{format_date blogPost.timestamp}}</p>
  </div>
</article>